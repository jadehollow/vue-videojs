{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "typeRoots": [
      "../../node_modules/@types/",
    ],
    "types": [
      "node",
      "@types/video.js"
    ],
    "useDefineForClassFields": true,
    
    
  }
}